{
  "name": "feathers-dataloader",
  "description": "Reduce requests to backend services by batching calls and caching records.",
  "version": "0.2.1",
  "homepage": "https://github.com/feathersjs-ecosystem/dataloader",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "feathers",
    "feathers-ecosystem",
    "batch",
    "cache",
    "dataloader"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:feathersjs-ecosystem/dataloader.git"
  },
  "author": {
    "name": "Feathers contributors",
    "email": "hello@feathersjs.com",
    "url": "https://feathersjs.com"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/feathersjs-ecosystem/dataloader/issues"
  },
  "engines": {
    "node": ">= 18"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "prettier": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --write",
    "prettier:check": "prettier \"src/**/*.ts\" \"tests/**/*.ts\" --check",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "ci": "pnpm run typecheck && pnpm run lint && pnpm run prettier:check && pnpm run test",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "release:pre": "pnpm version prerelease && pnpm publish --tag pre",
    "release:patch": "pnpm version patch && pnpm publish",
    "release:minor": "pnpm version minor && pnpm publish",
    "release:major": "pnpm version major && pnpm publish",
    "changelog": "github_changelog_generator && git add CHANGELOG.md && git commit -am \"Updating changelog\""
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@feathersjs/feathers": "^5.0.31",
    "@feathersjs/memory": "^5.0.31",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^2.1.6",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "dependencies": {
    "@feathersjs/errors": "^5.0.31",
    "dataloader": "^2.2.3"
  }
}
